#Import module
import tkinter
from tkinter import *
from tkinter.ttk import *

def clear_window_1():
    label2.destroy()
    canv.destroy()
    button2.destroy()
    button1.destroy()
    page2()


def clear_window_2():
    label2.destroy()
    canv.destroy()
    button2.destroy()
    button1.destroy()

#συναρτηση για αρχικη σελιδα
def start():
    global canv
    global label2
    global button1
    global button2
    canv = Canvas(height=180, width=380, bg="LightCyan3")
    canv.place(x=150, y=60)
    label2 = Label(text="Καλώς Ηρθατε!", font="Bold 20", background='LightCyan3')
    label2.place(x=230, y=80)
    button1 = Button(text="Δες όλα τα φαγητά της εβδομάδας", command=clear_window_1)
    button1.place(x=200, y=140)
    button2 = Button(text="Δες τα αγαπημένα φαγήτα σου", command=clear_window_2)
    button2.place(x=200, y=180)

def back_at_start1():
    canv3.destroy()
    label4.destroy()
    button18.destroy()
    button19.destroy()
    button20.destroy()
    button21.destroy()
    back1.destroy()
    start()


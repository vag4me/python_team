#Αρχικοποιηση για την Κυριακη
button34 = Button(text="Σπαγγέτι")
button35 = Button(text="Κοτόπουλο")
button36 = Button(text="Μπηφτέκακια")
button37 = Button(text="Κοτομπουκίες")



# Execute tkinter
root.mainloop()

#Import module
import tkinter
from tkinter import *
from tkinter.ttk import *

# Οι μερες της εβδομαδας για να διαλεξει ο χρηστης
def show_new_window():
    canv = Canvas(height=270, width=380, bg="LightCyan3")
    canv.place(x=150, y=60)

    label3 = Label(text = "Διάλεξε μέρα",font= "Bold 20",background='LightCyan3')
    label3.place(x=255, y=80)

    button3 = Button(text="Δευτέρα")
    button3.place(x = 200,y= 140)

    button4 = Button(text="Τρίτη")
    button4.place(x=350, y=140)

    button5 = Button(text="Τετάρτη")
    button5.place(x=200, y=190)

    button6 = Button(text="Πέμπτη")
    button6.place(x=350, y=190)

    button7 = Button(text="Παρασκευή")
    button7.place(x=200, y=240)

    button7 = Button(text="Σάββατο")
    button7.place(x=350, y=240)

    button7 = Button(text="Κυριακή")
    button7.place(x=275, y=290)



def clear_window_1():
    label2.destroy()
    canv.destroy()
    button2.destroy()
    button1.destroy()
    show_new_window()

def clear_window_2():
    label2.destroy()
    canv.destroy()
    button2.destroy()
    button1.destroy()

# Create object
root = Tk()

#input title
root.title("Πρόγραμμα Λέσχης")

root.geometry("700x500")
#lock the deminsions of the window
root.resizable(width=False, height=False)

#put logo icon
photo = PhotoImage(file = "C:/Users/user/Downloads/9f596769-790d-4b5f-bb80-668016a9c920.png")
root.iconphoto(False, photo)

# put image file
bg = PhotoImage(file="C:/Users/user/Downloads/background-images-for-login-page3bc68c53b0db224b.png")

# Show image using label
label1 = Label(root, image=bg)
label1.place(x=0, y=0)

canv = Canvas(height=180,width=380,bg="LightCyan3")
canv.place(x=150,y=60 )

label2 = Label(text= "Καλώς Ηρθατε!",font= "Bold 20",background='LightCyan3')
label2.place(x=230,y=80)

style = Style()

style.configure('TButton', font=
('calibri'),  borderwidth='4')

# Changes will be reflected
# by the movement of mouse.
style.map('TButton', foreground=[('active', '!disabled', 'blue')],
          background=[('active', 'black')])

button1 = Button(text="Δες όλα τα φαγητά της εβδομάδας",command=clear_window_1)
button1.place(x = 200,y= 140)

button2 = Button(text="Δες τα αγαπημένα φαγήτα σου",command=clear_window_2)
button2.place(x=200,y=180)



# Execute tkinter
root.mainloop()
